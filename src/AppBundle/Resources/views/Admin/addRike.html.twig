{% extends "::layoutAdmin.html.twig" %}

{% block page_container %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Ajouter une randonnée</h1>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            {{ form_start(form,{'attr': {'class': 'form-horizontal'}}) }}
            
            {% if isSaved == true %}
                <p class="alert alert-success">Randonnée ajouté avec succès</p>
            {% endif %}
            
            <div class="form-group">
                {{ form_label(form.locality, 'Lieu *', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-8">
                    {{ form_widget(form.locality, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-8">
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.date, 'Date *', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-8">
                    <div id="datetimepicker1" class="input-group date">
                        {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.distance, 'Distance *', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-8">
                    {{ form_widget(form.distance, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.lenght, 'Longueur *', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-8">
                    {{ form_widget(form.lenght, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.heightDifference, 'Dénivelé *', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-8">
                    {{ form_widget(form.heightDifference, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.duration, 'Durée *', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-8">
                    <div id="datetimepicker2" class="input-group date">
                        {{ form_widget(form.duration, {'attr': {'class': 'form-control'}}) }}
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.dificulty, 'Dificulté *', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-8">
                    {{ form_widget(form.dificulty, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.start, 'Départ *', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-8">
                    {{ form_widget(form.start, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.description, 'Description *', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-8">
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.image1, 'Image 1 *', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-8">
                    {{ form_widget(form.image1) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.image2, 'Image 2', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-8">
                    {{ form_widget(form.image2) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.image3, 'Image 3', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                <div class="col-sm-8">
                    {{ form_widget(form.image3) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-4">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            </div>
            
            {{ form_end(form) }}
            <script type="text/javascript">
                $(function () {
                    $('#datetimepicker1').datetimepicker({
                        locale: '{{ app.request.locale[:2] }}'
                    });
                    $('#datetimepicker2').datetimepicker({
                        locale: '{{ app.request.locale[:2] }}',
                        format: 'HH:mm',
                        defaultDate: '00/00/0000 00:00'
                    });
                });
            </script>
        </div>
    </div>
{% endblock %}